# ================================================
# CYPRESS AI DEBUG ASSISTANT - ENVIRONMENT CONFIG
# ================================================
# Copy this file to .env and add your API keys

# ----------------
# REQUIRED API KEYS
# ----------------

# Groq API Key (Required for AI features)
# Get yours at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# ----------------
# OPTIONAL INTEGRATIONS
# ----------------

# Discord Webhook URL (Optional - for failure notifications)
# Create webhook: Discord Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Slack Webhook URL (Optional - for Slack notifications)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# ----------------
# TEST CONFIGURATION
# ----------------

# Test Environment URLs
CYPRESS_BASE_URL=https://chitti.app/workshops/
CYPRESS_API_URL=https://api.chitti.app

# Test Credentials (Optional - for login tests)
CYPRESS_TEST_EMAIL=test@example.com
CYPRESS_TEST_PASSWORD=your_password_here
CYPRESS_ADMIN_EMAIL=admin@example.com
CYPRESS_ADMIN_PASSWORD=admin_password_here

# ----------------
# CYPRESS DASHBOARD (Optional)
# ----------------

# For recording test runs to Cypress Dashboard
# Get your key from: https://dashboard.cypress.io/
CYPRESS_RECORD_KEY=your_record_key_here
CYPRESS_PROJECT_ID=your_project_id_here
# Example: CYPRESS_RECORD_KEY=8b497083-367a-42fc-9405-696e43e9f2b4
# Example: CYPRESS_PROJECT_ID=ovn7sm

# ----------------
# BROWSER CONFIGURATION
# ----------------

# Default browser for tests (chrome, firefox, edge, electron)
CYPRESS_BROWSER=chrome

# Run tests in headed mode (true/false)
CYPRESS_HEADED=false

# ----------------
# TIMEOUTS
# ----------------

# Cypress timeouts in milliseconds
CYPRESS_DEFAULT_COMMAND_TIMEOUT=10000
CYPRESS_REQUEST_TIMEOUT=10000
CYPRESS_RESPONSE_TIMEOUT=10000

# ----------------
# AI & SELF-HEALING
# ----------------

# Enable self-healing features (true/false)
CYPRESS_SELF_HEALING_ENABLED=true
CYPRESS_SELF_HEALING_MAX_RETRIES=3

# AI Model Configuration
AI_MODEL=llama3-8b-8192
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.3

# ----------------
# GITHUB CONFIGURATION (Optional)
# ----------------

# For GitHub Actions integration
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=your_github_username
GITHUB_REPO=cypress-ai-debug-assistant

# ----------------
# TEST DATA
# ----------------

# Default test data
CYPRESS_TEST_PHONE=1234567890
CYPRESS_TEST_NAME=Test User
CYPRESS_TEST_SCHOOL=Test School

# ----------------
# FEATURE FLAGS
# ----------------

# Enable/disable features
CYPRESS_SCREENSHOTS_ON_FAILURE=true
CYPRESS_VIDEO_RECORDING=true
CYPRESS_PARALLEL_EXECUTION=false
ENABLE_JARVIS_MODE=true
ENABLE_DISCORD_NOTIFICATIONS=true
ENABLE_AI_DEBUGGING=true

# ----------------
# ENVIRONMENT
# ----------------

# Node environment
NODE_ENV=test

# Debug mode (shows additional logs)
DEBUG=false

# ================================================
# SETUP INSTRUCTIONS
# ================================================
# 
# 1. Copy this file: cp .env.example .env
# 2. Add your Groq API key (required)
# 3. Add Discord webhook URL (optional)
# 4. Configure other settings as needed
# 5. Never commit .env file to version control
#
# ================================================